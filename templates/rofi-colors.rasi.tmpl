/* Rofi Colors - Theme: ${THEME_NAME} */
/* Generated by theme-switch */

* {
    background:     ${BACKGROUND};
    background-alt: ${SURFACE_CONTAINER};
    foreground:     ${ON_SURFACE};
    selected:       ${PRIMARY_CONTAINER};
    active:         ${SECONDARY};
    urgent:         ${ERROR};

    normal-background: @background;
    normal-foreground: @foreground;
    active-background: ${SECONDARY_CONTAINER};
    active-foreground: ${ON_SECONDARY_CONTAINER};
    urgent-background: ${ERROR_CONTAINER};
    urgent-foreground: ${ON_ERROR_CONTAINER};

    selected-normal-background: ${PRIMARY_CONTAINER};
    selected-normal-foreground: ${ON_PRIMARY_CONTAINER};
    selected-active-background: ${SECONDARY};
    selected-active-foreground: ${ON_SECONDARY};
    selected-urgent-background: ${ERROR};
    selected-urgent-foreground: ${ON_ERROR};

    alternate-normal-background: @background;
    alternate-normal-foreground: @foreground;
    alternate-active-background: @background;
    alternate-active-foreground: ${SECONDARY};
    alternate-urgent-background: @background;
    alternate-urgent-foreground: ${ERROR};

    border-color: ${OUTLINE};
    spacing: 2;
}
