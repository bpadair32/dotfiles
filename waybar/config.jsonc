{
  "modules-left": [
    "custom/apps",
    "hyprland/workspaces"
  ],
  "modules-center": [
    "hyprland/window",
    "custom/media"
  ],
  "modules-right": [
    "group/tray",
    "group/hardware",
    "battery",
    "pulseaudio",
    "clock",
    "idle_inhibitor",
    "network",
    "custom/power",
    "custom/notification"
  ],
  "hyprland/workspaces": {
    "format": "{id}",
    "on-click": "activate",
    "on-scroll-down": "hyprctl dispatch workspace e+1",
    "on-scroll-up": "hyprctl dispatch workspace e-1",
    "cursor": "pointer",
    "persistent-workspaces": {
      "*": 3
    }
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    }
  },
  "hyprland/window": {
    "format": "{}",
    "max-length": 40,
    "rewrite": {
      "(.*) — Zen Browser": "🌎 $1"
    },
    "separate-outputs": true
  },
  "group/tray": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "children-class": "tray-modules"
    },
    "modules": [
      "custom/separator",
      "tray"
    ]
  },
  "custom/separator": {
    "format": "|",
    "tooltip": false
  },
  "clock": {
    // "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    // "format-alt": "{:%Y-%m-%d}"
  },
  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{icon} {volume}% {format_source}",
    "format-bluetooth-muted": "{icon} 0% {format_source}",
    "format-muted": "{icon} 0%",
    "format-source": " {volume}%",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": [
        "",
        "",
        ""
      ]
    },
    "on-click": "pavucontrol"
  },
  "custom/power": {
    "format": " ",
    "on-click": "~/repos/scripts/power.sh"
  },
  "battery": {
    "interval": 120,
    "states": {
      "warning": 20,
      "critical": 10
    },
    "format": "{icon}  {capacity}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
    ],
    "max-length": 25
  },
  "cpu": {
    "format": "  {usage}%",
    "interval": 10,
    "max-length": 10
  },
  "memory": {
    "format": " {percentage}%",
    "interval": 30,
    "max-length": 10
  },
  "disk": {
    "format": "  {percentage_free}%",
    "interval": 30
  },
  "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "hardware-modules"
    },
    "modules": [
      "cpu",
      "memory",
      "disk"
    ]
  },
  "network": {
    "interface": "wlp0s20f3",
    "format": " ",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)"
  },
  "custom/apps": {
    "format": "",
    "on-click": "sleep 0.2; pkill rofi; rofi -show drun"
  },
  "custom/media": {
    "format": "{icon}{text}",
    "return-type": "json",
    "format-icons": {
      "Playing": " ",
      "Paused": " "
    },
    "max-length": 70,
    "exec": "playerctl -a metadata --format '{\"text\": \"{{playerName}}: {{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "on-click": "playerctl play-pause"
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='red'><sup></sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  "reload_style_on_change": true
}
