{
  "modules-left": [
    "custom/apps",
    "hyprland/workspaces"
  ],
  "modules-center": [
    "hyprland/window",
    "custom/media"
  ],
  "modules-right": [
    "group/tray",
    "group/hardware",
    "battery",
    "pulseaudio",
    "clock",
    "idle_inhibitor",
    "network",
    "custom/power",
    "custom/notification"
  ],
  "hyprland/workspaces": {
    "format": "{id}",
    "on-click": "activate",
    "on-scroll-down": "hyprctl dispatch workspace e+1",
    "on-scroll-up": "hyprctl dispatch workspace e-1",
    "cursor": "pointer",
    "persistent-workspaces": {
      "*": 3
    }
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ïƒ´",
      "deactivated": "î°•"
    }
  },
  "hyprland/window": {
    "format": "{}",
    "max-length": 40,
    "rewrite": {
      "(.*) â€” Zen Browser": "ğŸŒ $1"
    },
    "separate-outputs": true
  },
  "group/tray": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "children-class": "tray-modules"
    },
    "modules": [
      "custom/separator",
      "tray"
    ]
  },
  "custom/separator": {
    "format": "|",
    "tooltip": false
  },
  "clock": {
