{
  "modules-left": [
    "custom/apps",
    "hyprland/workspaces",
    "custom/updates"
  ],
  "modules-center": [
    "hyprland/window",
    "custom/media"
  ],
  "modules-right": [
    "group/tray",
    "custom/weather",
    "custom/claude",
    "group/hardware",
    "battery",
    "pulseaudio",
    "clock",
    "idle_inhibitor",
    "network",
    "custom/power",
    "custom/notification"
  ],
  "hyprland/workspaces": {
    "format": "{id}",
    "on-click": "activate",
    "on-scroll-down": "hyprctl dispatch workspace e+1",
    "on-scroll-up": "hyprctl dispatch workspace e-1",
    "cursor": "pointer",
    "persistent-workspaces": {
      "*": 3
    }
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÉ¥",
      "deactivated": "Ó∞ï"
    }
  },
  "hyprland/window": {
    "format": "{}",
    "max-length": 40,
    "rewrite": {
      "(.*) ‚Äî Zen Browser": "üåé $1"
    },
    "separate-outputs": true
  },
  "group/tray": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "children-class": "tray-modules"
    },
    "modules": [
      "custom/separator",
      "tray"
    ]
  },
  "custom/separator": {
    "format": "|",
    "tooltip": false
  },
  "clock": {
    // "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    // "format-alt": "{:%Y-%m-%d}"
  },
  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{icon}Ôäî {volume}% {format_source}",
    "format-bluetooth-muted": "{icon}Ôäî 0% {format_source}",
    "format-muted": "{icon} 0%",
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "ÔÄ•",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "on-click": "pavucontrol"
  },
  "custom/power": {
    "format": "ÔÄë ",
    "on-click": "~/repos/scripts/power.sh"
  },
  "battery": {
    "interval": 120,
    "states": {
      "warning": 20,
      "critical": 10
    },
    "format": "{icon}  {capacity}%",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ],
    "max-length": 25
  },
  "cpu": {
    "format": "Ôãõ  {usage}%",
    "interval": 10,
    "max-length": 10
  },
  "memory": {
    "format": "Ôî∏ {percentage}%",
    "interval": 30,
    "max-length": 10
  },
  "disk": {
    "format": "ÔÇ†  {percentage_free}%",
    "interval": 30
  },
  "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "hardware-modules"
    },
    "modules": [
      "cpu",
      "memory",
      "disk"
    ]
  },
  "network": {
    "interface": "wlp0s20f3",
    "format": "Ôá´ ",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)"
  },
  "custom/apps": {
    "format": "Ôåã",
    "on-click": "sleep 0.2; pkill rofi; rofi -show drun"
  },
  "custom/updates": {
    "format": "{}",
    "return-type": "json",
    "interval": 7200,
    "exec": "~/repos/dotfiles/scripts/updates",
    "on-click": "kitty --class floating -e bash -c 'echo \"=== DNF Updates ===\"; dnf check-update; echo; echo \"=== Flatpak Updates ===\"; flatpak remote-ls --updates; read -p \"Press Enter to close...\"'",
    "tooltip": true
  },
  "custom/media": {
    "format": "{icon}{text}",
    "return-type": "json",
    "format-icons": {
      "Playing": "ÔÅã ",
      "Paused": "ÔÅå "
    },
    "max-length": 50,
    "exec": "playerctl -a metadata --format '{\"text\": \"{{playerName}}: {{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "on-click": "playerctl play-pause"
  },
  "custom/weather": {
    "format": "{}",
    "return-type": "json",
    "interval": 600,
    "exec": "~/repos/dotfiles/scripts/weather",
    "on-click": "xdg-open 'https://wttr.in'",
    "tooltip": true
  },
  "custom/claude": {
    "format": "{}",
    "return-type": "json",
    "interval": 60,
    "exec": "~/repos/dotfiles/scripts/claude-usage",
    "on-click": "kitty --class floating -e bash -c 'cat ~/.claude/stats-cache.json | jq . | less'",
    "tooltip": true
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "none": "ÔÇ¢",
      "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-none": "Ôá∑",
      "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-inhibited-none": "Ôá∑"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  "reload_style_on_change": true
}
